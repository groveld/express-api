{
  "name": "express-api",
  "version": "1.0.0",
  "private": true,
  "description": "This is a sample server for a pet store",
  "scripts": {
    "prepare": "husky install",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --verbose --watchAll",
    "lint": "eslint . --ext .cjs,.js,.ts --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .cjs,.js,.ts --fix --ignore-path .gitignore",
    "format": "prettier . --check --ignore-path .gitignore",
    "format:fix": "prettier . --write --ignore-path .gitignore"
  },
  "lint-staged": {
    "./**/*.+(cjs|js|ts)": [
      "npm run lint",
      "npm run format"
    ]
  },
  "dependencies": {
    "@logtail/node": "^0.2.2",
    "@logtail/winston": "^0.3.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.0.3",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "ulid": "^2.3.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.6",
    "supertest": "^6.3.3"
  }
}
