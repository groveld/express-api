{
  "name": "express-api",
  "version": "0.0.1",
  "description": "This is a sample server for a pet store",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "dev": "nodemon src/index.js -e js,json,yaml",
    "test": "jest",
    "format:check": "prettier . --check --ignore-path .gitignore",
    "format:write": "prettier . --write --ignore-path .gitignore",
    "lint:check": "eslint . --ignore-path .gitignore",
    "lint:write": "eslint . --fix --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run format:check",
      "npm run lint:check"
    ],
    "**/*.{json,cjs,md,yml,yaml}": [
      "npm run format:write"
    ]
  },
  "dependencies": {
    "@logtail/node": "^0.5.2",
    "@logtail/winston": "^0.5.2",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-openapi-validator": "^5.4.6",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "geoip-lite": "^1.4.10",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.13.0",
    "request-ip": "^3.3.0",
    "sequelize": "^6.37.5",
    "ulid": "^2.3.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "supertest": "^7.0.0"
  }
}
