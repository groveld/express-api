{
  "name": "express-api",
  "version": "0.0.1",
  "description": "This is a sample server for a pet store",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "dev": "nodemon src/index.js -e js,json,yaml",
    "test": "jest",
    "format:check": "prettier . --check --ignore-path .gitignore",
    "format:write": "prettier . --write --ignore-path .gitignore",
    "lint:check": "eslint . --ignore-path .gitignore",
    "lint:write": "eslint . --fix --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run format:check",
      "npm run lint:check"
    ],
    "**/*.{json,cjs,md,yml,yaml}": [
      "npm run format:write"
    ]
  },
  "dependencies": {
    "@logtail/node": "^0.4.17",
    "@logtail/winston": "^0.4.17",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-openapi-validator": "^5.1.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "geoip-lite": "^1.4.9",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "request-ip": "^3.3.0",
    "sequelize": "^6.35.1",
    "ulid": "^2.3.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  }
}
